<Window x:Class="Rudimentary_Antivirus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rudimentary_Antivirus"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Welcome message -->
        <TextBlock x:Name="lb_userName" Grid.Row="0" Margin="10" HorizontalAlignment="Right" TextAlignment="Right"
                   Text="" FontSize="16" FontWeight="Bold"/>

        <!-- Main content -->
        <ProgressBar HorizontalAlignment="Center" Height="28" Margin="0,17,0,0" VerticalAlignment="Top" Width="780" Grid.Row="1"/>
        <TabControl Grid.Row="1" Margin="10,50,10,59" Name="tabControl">
            <TabItem Header="Tasks" Name="Tasks" Margin="2,-2,-2,0">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Scanner" Name="Scanner" Margin="-2,0,-2,0">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
