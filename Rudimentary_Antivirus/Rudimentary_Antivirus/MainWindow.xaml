<Window x:Class="Rudimentary_Antivirus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rudimentary_Antivirus"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ProgressBar HorizontalAlignment="Left" Height="28" Margin="150,396,0,0" VerticalAlignment="Top" Width="640"/>
        <Button x:Name="btnScan" Content="Scan" HorizontalAlignment="Left" Margin="10,397,0,0" VerticalAlignment="Top" Height="26" Width="135"/>
        <TabControl Margin="10,0,10,59" Name="tabControl">
            <TabItem Header="Tasks" Name="Tasks">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Scanner" Name="Scanner" Margin="-2,0,-2,0">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="btnTerminate" Content="Terminate" HorizontalAlignment="Left" Margin="10,396,0,0" VerticalAlignment="Top" Height="26" Width="135"/>

    </Grid>
</Window>
